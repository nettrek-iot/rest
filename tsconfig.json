{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "rootDir": "./src",                       
    "outDir": "./dist",                       
    "esModuleInterop": true,                  
    "strict": true,                           
    "skipLibCheck": true,
    "types": ["node", "@types/express", "@types/json-server", "@types/cors", "@types/uuid"]                     
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
